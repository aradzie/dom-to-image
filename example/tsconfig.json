{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/out",
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "lib": [ "es2020", "dom", "dom.iterable" ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": [
    "src/**/*"
  ]
}
